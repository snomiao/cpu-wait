{
  "name": "cpu-wait",
  "version": "0.0.6",
  "description": "CLI tool that waits for CPU load to drop below a threshold before executing commands",
  "type": "module",
  "main": "index.js",
  "types": "index.ts",
  "bin": {
    "cpu-wait": "./cpu-wait.js"
  },
  "files": [
    "index.ts",
    "index.js",
    "cpu-wait.js"
  ],
  "scripts": {
    "build": "bun build index.ts --outdir . --target node --format esm",
    "test": "node cpu-wait.js echo 'Test successful'",
    "release": "bunx standard-version && bun publish",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "cpu",
    "load",
    "wait",
    "threshold",
    "monitor",
    "cli",
    "command",
    "wrapper"
  ],
  "author": "snomiao",
  "license": "MIT",
  "dependencies": {
    "node-os-utils": "^1.3.7",
    "commander": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/node-os-utils": "^1.3.4",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snomiao/cpu-wait.git"
  },
  "bugs": {
    "url": "https://github.com/snomiao/cpu-wait/issues"
  },
  "homepage": "https://github.com/snomiao/cpu-wait#readme"
}
